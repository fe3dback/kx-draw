<div class="example">
    <h1>Example rendering (index - {{index}}):</h1>

    <div class="row">
        <div class="col">
            <b class="title">Source (hello):</b>
            <textarea placeholder="">{{source}}</textarea>

            <b class="title">Source (shared/name):</b>
            <textarea placeholder="">{{source_shared}}</textarea>

            <b class="title">Data:</b>
            <textarea placeholder="">{{data}}</textarea>
        </div>
        <div class="col">
            <b class="title">Result raw:</b>
            <textarea placeholder="">{{result}}</textarea>

            <b class="title">Result html:</b>
            {{{result}}}
        </div>
        <div class="col">
            <b class="title">JS Side:</b>
            <button>Render again</button>
        </div>
    </div>

</div>