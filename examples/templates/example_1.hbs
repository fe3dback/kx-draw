<div class="example">
    <h1>Example rendering (index - {{index}}):</h1>

    <div class="row">
        <div class="col">
            <b class="title">Source (hello):</b>
            <textarea placeholder="" disabled>{{source}}</textarea>

            <b class="title">Source (shared/name):</b>
            <textarea placeholder="" disabled>{{source_shared}}</textarea>

            <b class="title">Data:</b>
            <textarea placeholder="" id="JSExampleDataJSON">{{data}}</textarea>
        </div>
        <div class="col">
            <b class="title">Result raw:</b>
            <textarea placeholder="" disabled>{{result}}</textarea>

            <b class="title">Result html:</b>
            {{{result}}}
        </div>
        <div class="col">
            <b class="title">JS Side:</b>
            <button onclick="render_again({{index}})">Render again</button>
            <br /><br />
            <b class="title">Try in console:</b>
            <textarea placeholder="" disabled>
// get current data
KXDraw.getDataByUniqId('hello', {{index}});

// render new data
KXDraw.update('hello', {{index}}, {name:"KXRender"});
            </textarea>
        </div>
    </div>

</div>